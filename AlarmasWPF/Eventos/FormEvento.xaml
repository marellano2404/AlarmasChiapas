<Window x:Class="AlarmasWPF.Eventos.FormEvento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="360" Width="635" WindowStartupLocation="CenterScreen" WindowState="Normal" ResizeMode="NoResize" 
        WindowStyle="ToolWindow">
    <Border Margin="10" BorderThickness="1,1,1,1" CornerRadius="10">
        <Border.BorderBrush>
            <SolidColorBrush Color="{DynamicResource ColorSubtitulo}"/>
        </Border.BorderBrush>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtTitulo" Text="Formulario de registro" VerticalAlignment="Center" Margin="10,2" Style="{DynamicResource TituloTextBlock}"/>
            <Rectangle Grid.Row="1" Height="1"  >
                <Rectangle.Stroke>
                    <SolidColorBrush Color="{DynamicResource ColorSubtitulo}"/>
                </Rectangle.Stroke>
            </Rectangle>
            <!--<TextBlock Text="Empresa" Grid.Row="2" Margin="3"/>
            <TextBox x:Name="txtClave" Grid.Row="3" Margin="3" Text="{Binding Empresa}" MaxLength="150" />-->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Usuario" Grid.Row="0" Grid.Column="0" Margin="3"/>
                <ComboBox Grid.Row="1" Grid.Column="0" Name="ComboBoxUser" Width="250" Height="32" FontSize="15" SelectedValuePath="Id" 
                          HorizontalAlignment="Left" Margin="5 0 0 0" SelectedValue="{Binding IdUsuario}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding NombreCompleto}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Alarma Emitida"  FontSize="16" Grid.Row="0" Grid.Column="1" Margin="3"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Name="ComboBoxClave" Width="300" Height="32" FontSize="15" SelectedValuePath="Id" 
                    HorizontalAlignment="Left" Margin="10 0 0 0" SelectedValue="{Binding IdClaveAlarma}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>     
                                    <StackPanel Orientation="Horizontal">
                                    <TextBlock>
                                    <Run FontWeight="Bold" Text="{Binding Clave}" />
                                    <Run Text="| " />
                                    <Run Text="{Binding Descripcion}" />
                                    </TextBlock> 
                                    </StackPanel>                       
                                <!--<TextBlock Text="{Binding Descripcion}"></TextBlock>-->                          
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>          
            <TextBlock Text="Detalle (no es necesario)" Grid.Row="3" Margin="3"/>
            <TextBox x:Name="txtNombre" Height="40" Grid.Row="4" Margin="3" Text="{Binding Descripcion}" MaxLength="260"  />
            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Fecha" Grid.Row="0" Grid.Column="0" Margin="3"/>
                <DatePicker Grid.Row="1" Grid.Column="0" x:Name="txtFechaNacimiento" SelectedDate="{Binding Fecha}" FontSize="15" Width="250" Height="32" Margin="5 0 0 0" 
                            HorizontalAlignment="Left"></DatePicker>

                <TextBlock Text="Hora" Grid.Row="0" Grid.Column="1" Margin="3"/>
                <TextBox  x:Name="HoraTxt" Grid.Row="1" Grid.Column="1" Margin="3" Text="{Binding Hora}" />
            </Grid>         
            
            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" Width="110" Height="30" Style="{StaticResource ButtonAdd}" Click="btnCancelar_Click" Cursor="Hand" Margin="4,2">
                    <TextBlock Text="Cancelar" Foreground="White"></TextBlock>
                </Button>
                <Button x:Name="btnAceptar" Width="110" Height="30" Style="{StaticResource ButtonAction}" Click="btnGuardarEvento_Click" Cursor="Hand" Margin="4,2">
                    <TextBlock Text="Guardar" Foreground="White"></TextBlock>
                </Button>
            </StackPanel>
                       
        </Grid>
    </Border>
</Window>
